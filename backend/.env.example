# 环境配置
ENVIRONMENT=development

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# 应用配置
APP_NAME=AI Video Maker
APP_VERSION=1.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 文件上传配置
MAX_UPLOAD_SIZE=100MB
UPLOAD_DIR=uploads

# 视频处理配置
MAX_VIDEO_DURATION=300
DEFAULT_VIDEO_RESOLUTION=1280x720
DEFAULT_VIDEO_FPS=24

# 音频配置
DEFAULT_TTS_PROVIDER=gtts
DEFAULT_VOICE=zh

# 数据库配置
# 使用SQLite（默认）
DATABASE_URL=sqlite:///data/app.db

# 使用MySQL（可选）
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ai_video_maker
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=your_mysql_password
# MYSQL_DATABASE=ai_video_maker
# MYSQL_CHARSET=utf8mb4

# 缓存配置
CACHE_DIR=cache
CACHE_EXPIRE_HOURS=24

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 安全配置
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000

# 第三方服务配置（可选）
# AZURE_TTS_KEY=your_azure_tts_key
# GOOGLE_TTS_KEY=your_google_tts_key
# ELEVENLABS_API_KEY=your_elevenlabs_key

# 云存储配置（可选）
# AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket
# AWS_REGION=us-east-1

# 阿里云 OSS
# ALIYUN_ACCESS_KEY=your_aliyun_access_key
# ALIYUN_SECRET_KEY=your_aliyun_secret_key
# ALIYUN_OSS_BUCKET=your_oss_bucket
# ALIYUN_OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com

# 腾讯云 COS
# TENCENT_SECRET_ID=your_tencent_secret_id
# TENCENT_SECRET_KEY=your_tencent_secret_key
# TENCENT_COS_BUCKET=your_cos_bucket
# TENCENT_COS_REGION=ap-beijing

# 七牛云
# QINIU_ACCESS_KEY=your_qiniu_access_key
# QINIU_SECRET_KEY=your_qiniu_secret_key
# QINIU_BUCKET=your_qiniu_bucket
# QINIU_DOMAIN=your_qiniu_domain.com